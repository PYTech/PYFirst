<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pytech.hrm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_hrm"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.pytech.hrm.activities.MainActivity"
            android:label="@string/label_main_activity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.pytech.hrm.activities.AboutActivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        
        <activity
            android:name="com.pytech.hrm.activities.ItemActivity" >
            <intent-filter>
                <action android:name="ItemActivity.NEW_ITEM"/>
                <action android:name="ItemActivity.EDIT_ITEM"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
    		android:name="com.pytech.hrm.activities.ColorActivity"
    		android:theme="@android:style/Theme.Dialog"
    		android:label="@string/title_activity_color" />
        
    </application>

</manifest>
